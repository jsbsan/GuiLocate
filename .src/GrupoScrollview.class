Public Sub TabOtros(MiScrollViewOtros As ScrollView, iconpaneltmp As IconPanel)
  'parte incluida para poner los archivos que no cumplan las otras extensiones de los grupos

  Dim indiceEnContenedorPadre As Integer = ArrayScrollView.Count

  MiScrollViewOtros.Expand = True
  MiScrollViewOtros.Arrangement = Arrange.Vertical

  $MiScrollViewOtros = New ScrollViewPresentacionOtros(MiScrollViewOtros, [""], iconpaneltmp, indiceEnContenedorPadre)

